<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFaceActivity">

    <FrameLayout
        android:id="@+id/camera_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/lower_cont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight=".92" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lower_cont"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight=".08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_view">

        <TextView
            android:id="@+id/take_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMaterial"
            android:text="CONFIRM FACE"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/pt_sans_bold"
            android:gravity="center_horizontal|center_vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>