<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorNavyBlue"
        android:fontFamily="@font/pt_sans_bold"
        android:gravity="center_vertical"
        android:paddingHorizontal="60dp"
        android:paddingVertical="12dp"
        android:text="Upload a PDF file"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_file_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pt_sans"
        android:gravity="center_horizontal|center_vertical"
        android:hint="File name"
        android:inputType="textVisiblePassword"
        android:padding="8dp"
        android:textColor="@color/colorNavyBlue"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tvb_uploaded_file"
        app:layout_constraintEnd_toEndOf="@+id/dialog_title"
        app:layout_constraintStart_toStartOf="@+id/dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

    <TextView
        android:id="@+id/tvb_uploaded_file"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorLightGreen"
        android:fontFamily="@font/pt_sans_bold_italic"
        android:gravity="center_horizontal|center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="No file selected"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tvb_upload"
        app:layout_constraintEnd_toEndOf="@+id/dialog_title"
        app:layout_constraintStart_toStartOf="@+id/dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_file_name" />

    <TextView
        android:id="@+id/tvb_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorNavyBlue"
        android:fontFamily="@font/pt_sans_bold"
        android:gravity="center_horizontal|center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:text="Upload"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_title"
        app:layout_constraintStart_toStartOf="@+id/dialog_title"
        app:layout_constraintTop_toBottomOf="@+id/tvb_uploaded_file" />

</androidx.constraintlayout.widget.ConstraintLayout>